<%= form_tag login_path, :class => "login-form" do %>
  <table class="form-table">
    <tr class="field">
      <td><%= label_tag :name, "Username" %>
      <td><%= text_field_tag :name, params[:name] %>
    </tr>
    <tr class="field">
      <td><%= label_tag :password %>
      <td><%= password_field_tag :password, params[:password] %>
    </tr>
    <tr class="field">
      <td colspan="2"><%= submit_tag "Login" %>
    </tr>
  </table>
<% end %>
