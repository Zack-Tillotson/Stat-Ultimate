<table>
  <thead>
    <tr>
      <td>Player</td>
      <% game.lines.each_with_index do |l,i| %>
        <td class="game-line <%=l.scored ? "us" : "them"%>"><%=i+1%></td>
      <% end %>
    </tr>
  </thead>
  <tbody>
      <% game.team.players.each do |p| %>
        <tr>
          <td><%=p.name %></td>
          <% game.lines.each_with_index do |l,i| %>
            <td class="game-line <%=l.scored ? "us" : "them"%>">
              <%=l.players.include?(p) ? "X" : "" %>
            </td>
          <% end %>
        </tr>
      <% end %>
  </tbody>
</table>
