<%= form_for([@game, @line]) do |f| %>
  <% if @line.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@line.errors.count, "error") %> prohibited this line from being saved:</h2>

      <ul>
      <% @line.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag :game_id, @game.id, :name => 'line[game_id]'%>
  <div class="field">
    <%= f.label :scored, "We Scored?" %><br />
    <%= f.check_box :scored %>
  </div>
  <div>
    <p>Players On The Field</p>
    <% @game.team.players.each do |p| %>
      <div class="field">
        <%= check_box_tag "player_check_#{p.id}", p.id, false, :name => 'line[player_ids][]' %>
        <%= label_tag "player_check_#{p.id}", p.name %><br />
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
