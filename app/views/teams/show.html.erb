<p id="notice"><%= notice %></p>

<h1>Team: <%= @team.name %></h1>

<div class="game-list">
  <%= link_to "New Game", new_team_game_path(@team), :class => "new-game" %>
  <ul>
    <% @team.games.reverse.each_with_index do |g,i| %>
      <li><%= render 'games/short_game_info', :game => g, :index => i %></li>
    <% end %>
  </ul>
</div>

<%= link_to 'Review', review_team_path(@team) %> |
<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
